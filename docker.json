{
  "builders": [
    {
      "ami_name": "docker {{timestamp}}",
      "ami_virtualization_type": "hvm",
      "associate_public_ip_address": "true",
      "instance_type": "t2.small",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "name": "*ubuntu-yakkety-16.10-amd64-server-*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true
      },
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "ubuntu/images/hvm-ssd/ubuntu-yakkety-16.10-amd64-server-20170719",
        "Docker_Version": "ce_17.10.0",
        "Docker_Url" : "https://download.docker.com/linux/ubuntu/dists/xenial/pool/edge/amd64/docker-ce_17.10.0~ce-0~ubuntu_amd64.deb",
        "AWSCLI_Version": "1.11.178",
        "Packer_Version": "1.0.0",
        "DockerMachine_Version": "0.13",
        "DockerCompose_Version": "1.16.1",
        "Build_Date": "{{isotime \"2006-01-02 03:04:05\"}}",
        "Name": "Docker-Base"
      },
      "type": "amazon-ebs",
      "security_group_ids": ["sg-f691498d"],
      "ssh_username": "ubuntu",
      "subnet_id": "subnet-01086b59"
    }
  ],
  "post-processors": null,
  "provisioners": [
    {
      "destination": "/tmp/custom.conf",
      "source": "docker.options",
      "type": "file"
    },
    {
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "sudo mkdir /etc/systemd/system/docker.service.d && sudo mv /tmp/custom.conf /etc/systemd/system/docker.service.d/",
        "apt-get -y update",
        "apt-get -y install unzip libltdl7",
        "sudo ln -s /usr/bin/python3 /usr/bin/python",
        "curl 'https://s3.amazonaws.com/aws-cli/awscli-bundle.zip' -o 'awscli-bundle.zip';unzip awscli-bundle.zip;./awscli-bundle/install -b ~/bin/aws",
        "curl https://download.docker.com/linux/ubuntu/dists/xenial/pool/edge/amd64/docker-ce_17.10.0~ce-0~ubuntu_amd64.deb -o package.deb;sudo dpkg -i package.deb",
        "curl -L https://github.com/docker/machine/releases/download/v0.13.0/docker-machine-`uname -s`-`uname -m` >/tmp/docker-machine && chmod +x /tmp/docker-machine && sudo cp /tmp/docker-machine /usr/local/bin/docker-machine",
        "sudo curl -L https://github.com/docker/compose/releases/download/1.16.1/docker-compose-`uname -s`-`uname -m` -o /usr/local/bin/docker-compose && sudo chmod +x /usr/local/bin/docker-compose",
        "usermod -aG docker ubuntu",
        "rm -rf awscli-bundle* package.deb"
      ],
      "type": "shell"
    }
  ]
}
