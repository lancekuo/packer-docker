{
  "builders": [
    {
      "ami_name": "docker {{timestamp}}",
      "ami_virtualization_type": "hvm",
      "associate_public_ip_address": "true",
      "instance_type": "t2.micro",
      "region": "ca-central-1",
      "source_ami_filter": {
        "filters": {
          "name": "*ubuntu-bionic-18.04-amd64-server*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm"
        },
        "most_recent": true
      },
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-20180724",
        "Docker_Version": "ce_18.06.0",
        "Docker_Url" : "https://download.docker.com/linux/ubuntu/dists/bionic/pool/stable/amd64/docker-ce_18.06.0~ce~3-0~ubuntu_amd64.deb",
        "AWSCLI_Version": "1.15.62",
        "Packer_Version": "1.2.0",
        "DockerCompose_Version": "1.22.0",
        "Build_Date": "{{isotime \"2006-01-02 03:04:05\"}}",
        "Name": "Docker-Base"
      },
      "type": "amazon-ebs",
      "security_group_ids": ["sg-fbc5be93"],
      "ssh_username": "ubuntu",
      "subnet_id": "subnet-3b3d0740"
    }
  ],
  "post-processors": null,
  "provisioners": [
    {
      "destination": "/tmp/custom.conf",
      "source": "docker.options",
      "type": "file"
    },
    {
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
      "inline": [
        "sudo mkdir /etc/systemd/system/docker.service.d && sudo mv /tmp/custom.conf /etc/systemd/system/docker.service.d/",
        "sudo systemctl disable apt-daily.timer",
        "apt-get -y update",
        "apt-get -y install unzip libltdl7 s3fs python3-distutils",
        "sudo ln -s /usr/bin/python3 /usr/bin/python",
        "curl 'https://s3.amazonaws.com/aws-cli/awscli-bundle.zip' -o 'awscli-bundle.zip';unzip awscli-bundle.zip;sudo ./awscli-bundle/install -i /usr/local/aws -b /usr/local/bin/aws",
        "curl https://download.docker.com/linux/ubuntu/dists/bionic/pool/stable/amd64/docker-ce_18.06.0~ce~3-0~ubuntu_amd64.deb -o package.deb;sudo dpkg -i package.deb",
        "sudo curl -L https://github.com/docker/compose/releases/download/1.22.0/docker-compose-`uname -s`-`uname -m` -o /usr/local/bin/docker-compose && sudo chmod +x /usr/local/bin/docker-compose",
        "usermod -aG docker ubuntu",
        "rm -rf awscli-bundle* package.deb"
      ],
      "type": "shell"
    }
  ]
}
